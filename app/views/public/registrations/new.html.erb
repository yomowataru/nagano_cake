<div class="container mt-3">

  <div class="row">
    <h4>新規会員登録</h4>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="row my-2">
    <div class="col-lg-12 text-left">
      <table class="table table-borderless table-sm">
        
        <tr>
          <th><label>名前</label></th>
          <td><%= f.label :last_name, "(姓)" %></td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.label :first_name, "(名)" %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        
        <tr>
          <th><label>フリガナ</label></th>
          <td><%= f.label :last_name_kana, "(セイ)" %></td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.label :first_name_kana, "(メイ)" %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        
        <tr>
          <th><%= f.label :email, "メールアドレス" %></th>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          
        </tr>
        
        <tr>
          <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
          <td></td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th><%= f.label :address, "住所" %></th>
          <td></td>
          <td colspan="4"><%= f.text_field :address, size: 80 %></td>
        </tr>
        <tr>
          <th><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></th>
          <td></td>
          <td><%= f.text_field :telephone_number %> </td>
        </tr>
        <tr>
          <th>
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>
          </th>
          <td></td>
          <td>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <th><%= f.label :password_confirmation, "パスワード(確認用)" %></th>
          <td></td>
          <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td></td>
          <td><%= f.submit "新規登録", class: 'btn btn-success'%></td>
        </tr>
      </table>
    </div>
  </div>
  <% end %>
  
  <div class="row">
    <h4>既に登録済みの方</h4>
  </div>
  
  <div class="row m-2">
    <%= link_to "こちら", new_customer_session_path %><span>からログインしてください。</span>
  </div>
</div>


