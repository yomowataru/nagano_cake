<div class="container">
  <div class="row m-5">
    <h4>商品一覧 (全 <%= @items_count %> 件)</h4>
  </div>
    
  <div class="row m-5 justify-content-center d-flex flex-wrap">
    <% @items.each do |items| %>
    
    <div class="w-25">
        <%= link_to item_path(items.id) do %>
          <%= image_tag items.get_image, size: "200x200" %>
        <% end %>
        <p><%= link_to items.name, item_path(items.id) %></p>
        <p>￥<%= number_to_currency(items.add_tax_price) %></p>
      
    </div>
    
    <% end %>
  </div>
    <%= paginate @items %>
</div>