<div class="container">
  <div class="row m-5">
    <div class="col-lg-6 justify-content-start text-left">
      <h4>注文履歴一覧</h4>
    </div>
  </div>


  <div class="row">
    <table class="table table-bordered ">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <% @orders.each do |orders| %>
      <tbody>
        <tr>
          <td class="align-middle"><%= orders.created_at.strftime('%Y/%m/%d') %></td>
          <td class="align-middle">
            <%= orders.postal_code %> <br>
            <%= orders.address %> <br>
            <%= orders.name %>
          </td>
          <td class="align-middle">
            <% orders.order_details.each do |order_detail| %>
              <%= order_detail.item.name %> </br>
            <% end %>
          </td>
          <td class="align-middle"><%= number_to_currency(orders.total_payment) %></td>
          <td class="align-middle"><%= link_to "表示する", order_path(orders.id), class: 'btn btn-primary' %></td>
          <!--削除<td>%= link_to "削除する", order_path(orders.id), method: :delete %></td>-->
        </tr>
      </tbody>
      <% end %>

    </table>
  </div>
</div>