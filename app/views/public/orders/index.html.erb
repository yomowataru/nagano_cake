<h2>注文履歴一覧</h2>

<div>
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <!--<th>注文商品</th>-->
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <% @orders.each do |orders| %>
    <tbody>
      <tr>
        <td><%= orders.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= orders.postal_code %> <br>
          <%= orders.address %> <br>
          <%= orders.name %> 
        </td>
        <!--<td></td>-->
        <td><%= orders.total_payment %></td>
        <td><%= link_to "表示する", order_path(orders.id) %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>