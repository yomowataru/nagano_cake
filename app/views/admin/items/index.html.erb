<div class="container">
  <div class="row m-2">
    <div class="col-lg-6">
      <h4>商品一覧</h4>
    </div>
    <div class="col-lg-4 text-right">
      <%= link_to "⊕", new_admin_item_path %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-10 text-left">
      <table class="table table-borderless">
        <thead class="table-secondary">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
          </tr>
        </thead>
        <% @items.each do |items| %>
        <tbody>
          <tr>
            <td><%= items.id %></td>
            <!--↓商品詳細ページへのリンクについて、(@item.id)と書きがちだが、
              each do~で呼び出した段階で各商品のidも含まれているため、(items.id)-->
            <td><%= link_to items.name, admin_item_path(items.id) %></td>
            <td><%= number_to_currency(items.price) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-center">
      <%= paginate @items %>
    </div>
  </div>

</div>