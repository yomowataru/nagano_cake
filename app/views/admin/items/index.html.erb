<h2>商品一覧</h2>

<%= link_to "+", new_admin_item_path %>

<% @items.each do |items| %>

<div>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= items.id %></td>
        <!--↓商品詳細ページへのリンクについて、(@item.id)と書きがちだが、
          each do~で呼び出した段階で各商品のidも含まれているため、(items.id)-->
        <td><%= link_to items.name, admin_item_path(items.id) %></td>
        <td><%= items.price %></td>
      </tr>
    </tbody>
  </table>
</div>
<% end %>
<%= paginate @items %>