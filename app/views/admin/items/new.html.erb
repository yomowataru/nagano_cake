<h2>商品新規登録</h2>

<div>
  <%= form_with model: @item do |f| %>
    <div>
      <%= f.label :image, "商品画像" %>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    
    <div>
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name %>
    </div>
    
    <div>
      <%= f.label :introduction, "商品説明" %>
      <%= f.text_area :introduction %>
    </div>
      
    <div>
      <%= f.label :price, "税抜価格" %>
      <%= f.text_field :price %>円 
    </div>
      
    <div><%= f.submit '新規登録' %></div> 
    
  <% end %> 
</div> 