<div>
  <div>
    <h2>注文履歴一覧</h2>
  </div>
  <div>
    <table>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
      </thead>

      <% @orders.each do |orders| %>
      <tbody>
        <tr>
          <td><%= orders.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          <td><%= orders.customer.last_name %><%= orders.customer.first_name %></td>
          <td><%= orders.order_details.sum(:amount) %></td>
        </tr>
      </tbody>
      <% end %>
  </table>
  </div>
</div>

<%= paginate @orders %>
