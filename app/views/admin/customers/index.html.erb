<h2>会員一覧 </h2>



<div>
  <table>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @customers.each do |customers| %>
    <tbody>
      <tr>
        <td><%= customers.id %></td>
        <td><%= link_to customers.full_name, admin_customer_path(customers.id) %></td>
        <td><%= customers.email %></td>
        <td>
          <% if customers.is_deleted == false %>
            有効
          <% else %>
            退会
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>

<%= paginate @customers %>