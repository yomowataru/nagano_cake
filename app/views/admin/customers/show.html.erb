<div class="container mt-3">
  
  <div class="row">
    <h4><%= @customer.full_name %>さんの会員詳細</h4>
  </div>
  
  <div class="row">
    <div class="col-lg-6 text-left">
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_deleted == false %>
                 <p class="text-success">有効</p>
            <% else %>
                <p>退会</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %></td>
          <td><%= link_to "注文履歴一覧", admin_root_path, class: 'btn btn-primary' %></td>
        </tr>
      </table>
    </div>
  </div>
  
</div>