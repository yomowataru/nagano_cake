<div>
  <h2><%= @customer.full_name %>さんの会員情報編集</h2>
</div>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
<table>
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <th><label for="inputName">氏名</label></th>
    <td><%= f.text_field :last_name, autofocus: true, id:"inputName" %></td>
    <td><%= f.text_field :first_name, autofocus: true, id:"inputName" %></td>
  </tr>
  <tr>
    <th><label for="inputKana">カナ</label></th>
    <td><%= f.text_field :last_name_kana, autofocus: true, id:"inputKana" %></td>
    <td><%= f.text_field :first_name_kana, autofocus: true, id:"inputKana" %></td>
  </tr>
  <tr>
    <th><label for="inputPostal">郵便番号</label></th>
    <td><%= f.text_field :postal_code, autofocus: true, id:"inputPostal" %></td>
  </tr>
  <tr>
    <th><label for="inputAddress">住所</label></th>
    <td><%= f.text_field :address, autofocus: true, id:"inputAddress" %></td>
  </tr>
  <tr>
    <th><label for="inputTelephone">電話番号</label></th>
    <td><%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone" %></td>
  </tr>
  <tr>
    <th><label for="inputEmail">メールアドレス</label></th>
    <td><%= f.text_field :email, autofocus: true, id:"inputEmail" %></td>
  </tr>
  <tr>
    <th><label for="status">会員ステータス</label></th>
    <td>
      <%= f.radio_button :status, 0, checked: "checked" %>
      <%= f.label :status, "有効" %>
      <%= f.radio_button :status, 1 %>
      <%= f.label :status, "退会" %>
    </td>
  </tr>
</table>
  
  <%= f.submit "変更を保存" %>
  
<% end %>